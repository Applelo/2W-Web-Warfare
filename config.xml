<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>2W : Web Warfare</name>
    <description>
        Un jeu de carte sur le d√©veloppement web
    </description>
    <author email="pinguin.studio@gmail.com" href="http://cordova.io">
        Pinguin Studio
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/logo.png" />
        <splash src="www/img/logo.png" density="land-hdpi"/>
        <preference name="Fullscreen" value="true" />
        <splash src="res/HDPIpa.png" density="land-hdpi"/>
        <splash src="res/LDPIpa.png" density="land-ldpi"/>
        <splash src="res/HDPIpo.png" density="port-hdpi"/>
        <splash src="res/LDPIpo.png" density="port-ldpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-media" spec="~2.4.1" />

</widget>
